<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<%= form_with model: @post, url: posts_path, local: true do |f| %>
  <%= f.text_area :content, size: "100x70" %>
  <%= f.submit '投稿' %>
<% end %>

<% @posts.each do |post| %>
<div>
  <%= markdown(post.content) %>
  <%= post.created_at %>
</div>
<% end %>